<?xml version='1.0' encoding='utf-8'?>
<widget id="dk.dr.tv" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Android TV DR</name>
    <description>
        A media browser for danish state radio and televsion, using http://dr.dk/mu REST API
    </description>
    <author email="madsjon@gmail.com">
        Mads Jon Nielsen
    </author>
    <content src="index.html" />
    <allow-intent href="*" />
    <access origin="*"/>
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <allow-intent href="market:*" />
    </platform>
    <plugin name="cordova-plugin-console" spec="~1.0.5" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~5.1.1" />
</widget>

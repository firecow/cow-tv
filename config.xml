<?xml version='1.0' encoding='utf-8'?>
<widget id="dk.cowtv" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cow TV</name>
    <description>
        A media browser for danish state radio and televsion, using http://dr.dk/mu REST API
    </description>
    <author email="madsjon@gmail.com">
        Mads Jon Nielsen
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <allow-intent href="*" />
    <access origin="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="23" />
        <allow-intent href="market:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-android-tv" spec="git+https://github.com/firecow/cordova-plugin-android-tv.git" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
</widget>
